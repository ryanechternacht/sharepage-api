#!/bin/sh

DEFAULT='\033[0m'
GREEN='\033[0;32m'
CYAN='\033[1;36m'

aws ecr get-login-password --region us-east-2 | docker login --username AWS --password-stdin 126599745635.dkr.ecr.us-east-2.amazonaws.com
echo "${GREEN}Step 1 Complete:${DEFAULT} Refreshing AWS token
"

docker build -f deployment/prod/Dockerfile-prod -t buyersphere-api-prod .
echo "${GREEN}Step 2 Complete:${DEFAULT} Building Docker image
"

docker tag buyersphere-api-prod:latest 126599745635.dkr.ecr.us-east-2.amazonaws.com/buyersphere-api-prod:latest
echo "${GREEN}Step 3 Complete:${DEFAULT} Tagging Docker image
"

docker push 126599745635.dkr.ecr.us-east-2.amazonaws.com/buyersphere-api-prod:latest
echo "${GREEN}Step 4 Complete:${DEFAULT} Deploying Docker image

Check AWS AppRunner (link below) to see the service deployment:

${CYAN}https://us-east-2.console.aws.amazon.com/apprunner/home?region=us-east-2#/services/dashboard?service_arn=arn%3Aaws%3Aapprunner%3Aus-east-2%3A126599745635%3Aservice%2Fbuyersphere-api-prod%2Fcc1ddcab44d24476a6f3ee28d659f097&active_tab=logs${DEFAULT}

"
